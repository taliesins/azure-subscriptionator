{
  "type": "Microsoft.Authorization/policyDefinitions",
  "name": "naming-virtual-network",
  "properties": {
    "displayName": "Naming of Azure virtual networks",
    "description": "Naming of Azure virtual networks. Example virtual network name M-UKS-L01-MGMT01-RG-VNET-VN-CORE",
    "metadata": {
      "category": "Naming"
    },
    "mode": "All",
    "parameters": {
      "effect": {
        "type": "string",
        "metadata": {
          "displayName": "effect",
          "description": "Effect of policy, such as audit or deny"
        },
        "allowedValues": [
          "Append",
          "Audit",
          "AuditIfNotExists",
          "Deny",
          "DeployIfNotExists",
          "Disabled"
        ]
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Network/virtualNetworks"
          },
          {
            "not": {
              "allOf": [
                {
                  "anyOf": [
                    {
                      "field": "name",
                    "match": "[uniqueString(resourceGroup().id)]-VN-*"
                    }
                  ]
                },
                {
                  "anyOf": [
                    {
                      "field": "name",
                      "match": "*-VN-."
                    },
                    {
                      "field": "name",
                      "match": "*-VN-.."
                    },
                    {
                      "field": "name",
                      "match": "*-VN-..."
                    },
                    {
                      "field": "name",
                      "match": "*-VN-...."
                    },
                    {
                      "field": "name",
                      "match": "*-VN-....."
                    },
                    {
                      "field": "name",
                      "match": "*-VN-......"
                    },
                    {
                      "field": "name",
                      "match": "*-VN-......."
                    },
                    {
                      "field": "name",
                      "match": "*-VN-........"
                    }
                  ]
                }
              ]
            }
          }
        ]
      },
      "then": {
      "effect": "[parameters('effect')]"
      }
    }
  }
}
