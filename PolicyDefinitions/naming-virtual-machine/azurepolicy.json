{
   "type": "Microsoft.Authorization/policyDefinitions",
   "name": "naming-virtual-machine",
   "properties": {
      "displayName": "Naming of Azure virtual machines",
      "description": "Naming of Azure virtual machines. Example virtual machine name MLWMGTJENKINS01",
      "metadata":  {
         "category": "Naming"
      },
      "mode": "All",
      "parameters": {
         "effect": {
            "type": "string",
            "metadata": {
              "displayName": "effect",
              "description": "Effect of policy, such as audit or deny"
            },
            "allowedValues": [
               "Append",
               "Audit",
               "AuditIfNotExists",
               "Deny",
               "DeployIfNotExists",
               "Disabled"
            ]
         }
      },
      "policyRule": {
         "if": {
            "allOf": [
               {
                  "field": "type",
                  "equals": "Microsoft.Compute/virtualMachines"
               },
               {
                  "not": {
                     "allOf": [
                        {
                           "anyOf": [
                              {
                                 "field": "name",
                                 "match": "M*"
                              }
                           ]  
                        },
                        {
                           "anyOf": [
                              {
                                 "field": "name",
                                 "match": "?T*"
                              },
                              {
                                 "field": "name",
                                 "match": "?N*"
                              },
                              {
                                 "field": "name",
                                 "match": "?R*"
                              },
                              {
                                 "field": "name",
                                 "match": "?L*"
                              }
                           ]  
                        },
                        {
                           "anyOf": [
                              {
                                 "field": "name",
                                 "match": "??B*"
                              },
                              {
                                 "field": "name",
                                 "match": "??L*"
                              },
                              {
                                 "field": "name",
                                 "match": "??W*"
                              }
                           ]  
                        },
                        {
                           "anyOf": [
                              {
                                 "field": "name",
                                 "match": "???............"  
                              }
                           ]
                        }
                     ]
                  }
               }
            ]
         },
         "then": {
            "effect": "[parameters('effect')]"
         }
      }
   }
}